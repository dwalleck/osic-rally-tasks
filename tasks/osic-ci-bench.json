{% set flavor_name = flavor_name or "m1.tiny" %}
{% set image_name = image_name or "^cirros.*uec$" %}
{% set volume_type = volume_type or "" %}
{% set volume_size = volume_size or 10 %}
{% set new_volume_size = new_volume_size or 20 %}
{% set iterations = iterations or 5 %}
{% set concurrent_server_builds = concurrent_server_builds or 5 %}
{% set image_location = image_location or "http://cloud-images.ubuntu.com/xenial/current/xenial-server-cloudimg-amd64-disk1.img" %}

{
    "NovaServers.boot_and_delete_server": [
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "{{image_name}}"
                },
                "force_delete": false
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": { }
        },
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "{{image_name}}"
                },
                "force_delete": false
            },
            "runner": {
                "type": "constant",
                "times": {{concurrent_server_builds}},
                "concurrency": {{concurrent_server_builds}}
            },
            "context": { }
        }
    ],
    "NovaServers.boot_server_from_volume_and_delete": [
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "{{image_name}}"
                },
                "volume_size": {{volume_size}},
                "volume_type": "{{volume_type}}",
                "force_delete": false
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": { }
        }
    ],
    "CinderVolumes.create_and_delete_snapshot": [
        {
            "args": {
                "force": false
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
                "volumes": {
                    "size": {{volume_size}}
                }
            }
        }
    ],
    "CinderVolumes.create_volume_and_clone": [
        {
            "args": {
                "size": {{volume_size}}
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
            }
        }
    ],
    "CinderVolumes.create_volume_from_snapshot": [
        {
            "args": {
                "do_delete": true
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
                "volumes": {
                    "size": {{volume_size}}
                }
            }
        }
    ],
     "CinderVolumes.create_and_extend_volume": [
        {
            "args": {
                "size": {{volume_size}},
                "new_size": {{new_volume_size}}
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
            }
        }
    ],
    "GlanceImages.create_and_delete_image": [
        {
            "args": {
                "image_location": "{{image_location}}",
                "container_format": "bare",
                "disk_format": "qcow2"
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
            }
        }
    ],
    "NeutronNetworks.create_and_delete_networks": [
        {
            "args": {
                "network_create_args": {}
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
                "quotas": {
                    "neutron": {
                        "network": -1
                    }
                }
            }
        }
    ],
    "NeutronNetworks.create_and_delete_ports": [
        {
            "args": {
                "network_create_args": {},
                "port_create_args": {},
                "ports_per_network": 10
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
                "network": {},
                "quotas": {
                    "neutron": {
                        "network": -1,
                        "port": -1
                    }
                }
            }
        }
    ]
}